@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">GITHUB DEMO</a>.</p>
</div>

<h2>Azure Learning Modules</h2>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Module</th>
                <th>Category</th>
                <th>Status</th>
                <th>Score</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.AzureModules)
            {
                <tr>
                    <td>@item.ModuleName</td>
                    <td>@item.Category</td>
                    <td>@item.CompletionStatus</td>
                    <td>@(item.Score.HasValue? item.Score.ToString() : "N/A")</td>
                </tr>
            }
        </tbody>
    </table>

<h2>Azure Assessment History</h2>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Module</th>
                <th>Attempt Date</th>
                <th>Score</th>
                <th>Passed</th>
                <th>Attempt #</th>
                <th>Feedback</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Assessments)
            {
                <tr>
                    <td>@item.ModuleName</td>
                    <td>@item.AttemptDate.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@item.Score</td>
                    <td>@(item.Passed ? "Yes" : "No")</td>
                    <td>@item.AttemptNumber</td>
                    <td>@(string.IsNullOrWhiteSpace(item.Feedback) ? "—" : item.Feedback)</td>
                </tr>
            }
        </tbody>
    </table>    
